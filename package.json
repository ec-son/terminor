{
  "name": "termtran",
  "version": "1.0.0",
  "description": "A CLI to translate between languages in the terminal",
  "main": "dist/index.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "dev": "tsc && concurrently -k -n \"Typescript,Node\" -p \"[{name}]\" -c \"blue,green\" \"tsc --watch\" \"nodemon dist/test/main.js\"",
    "test": "npx jest",
    "test-watch": "npx jest watch"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "commander": "^10.0.0",
    "figlet": "^1.5.2",
    "inquirer": "^9.1.4",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.5",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.0",
    "@types/yargs": "^17.0.22",
    "concurrently": "^7.6.0",
    "jest": "^29.4.3",
    "nodemon": "^2.0.20",
    "typescript": "^4.9.5"
  }
}
